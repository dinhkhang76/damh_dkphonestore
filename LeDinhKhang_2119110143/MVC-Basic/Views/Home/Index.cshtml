@model MVC_Basic.Models.HomeModel
@{
    ViewBag.Title = "Trang chủ";
}




<div class="container">
    <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">
                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <nav class="nav-home-aside">
                            <a href="@Url.Action("Index","Category")">
                                <h6 style="font-size:18px;font-weight:bold" class="title-category text-uppercase">Danh mục sản phẩm <i class="d-md-none icon fa fa-chevron-down"></i></h6>
                            </a>
                            
                            <ul class="menu-category" style="font-size:16px">
                                @foreach (var item in Model.ListCategory)
                                {
                                   
                                    <li><a href="@Url.Action("ProductCategory", "Category", new { Id = item.Id })">@item.Name</a></li>

                                   

                                }

                            </ul>
                        </nav>
                    </aside> <!-- col.// -->
                    <div class="col-md-9 col-xl-7 col-lg-7">
                        <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Content/images/banners/slide1.png" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/slide2.png" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/slide3.png" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->
                    </div> <!-- col.// -->
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h6 class="bg-blue text-center text-white mb-0 p-2">Danh mục phổ biến</h6>
                            @foreach (var item in Model.ListCategory.Where(n => n.IsPopular == 1).Take(4))
                            {
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <a href="@Url.Action("ProductCategory","Category",new { Id = item.Id })">
                                            <h6 class="card-title">@item.Name</h6>

                                        </a>
                                        @*<a href="@Url.Action("Index","Category",new { Id = item.Id })" class="btn btn-secondary btn-sm"> Source now </a>*@

                                    </div>
                                    <a href="@Url.Action("ProductCategory","Category",new { Id = item.Id })">
                                        <img src="~/Content/images/category/@item.Avatar" height="80" class="img-bg" />
                                    </a>
                                </div>
                            }


                        </aside>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card-body.// -->
        </main> <!-- card.// -->
    </section>
    <!-- ========================= SECTION MAIN END// ========================= -->
    <!-- =============== SECTION DEAL =============== -->
    <section class="padding-bottom">
        <div class="card card-deal">
            <div class="col-heading content-body">
                <header class="section-heading">
                    <h3 class="section-title text-uppercase" style="color:red">Giảm giá sốc</h3><br />
                   
                </header><!-- sect-heading -->
                <div class="timer">
                    <div> <span class="num">04</span> <small>Ngày</small></div>
                    <div> <span class="num">12</span> <small>Giờ</small></div>
                    <div> <span class="num">58</span> <small>Phút</small></div>
                    <div> <span class="num">02</span> <small>Giây</small></div>
                </div>
            </div> <!-- col.// -->
            <div class="row no-gutters items-wrap">
                @foreach (var item in Model.ListProduct.Where(n => n.TypeId == 1).Take(3))
                {
                    <div class="col-md col-6">
                        <figure class="card-product-grid card-sm">
                            <a href="@Url.Action("Detail","Product",new { Id = item.Id })" class="img-wrap img-fluid">
                                <img src="~/Content/images/items/@item.Avatar" height="80" class="img-bg img-fluid" style="margin-top:2px" />
                            </a>
                            <div class="text-wrap p-3" style="font-weight:bold;font-size:17px">
                                @Html.ActionLink(item.Name, "Detail", "Product", new { Id = item.Id }, null)
                                <span class="badge badge-danger"> -20% </span>
                            </div>
                            <div class="price mt-1 text-muted"><del style="font-size:13px">@string.Format("{0:0,0}", item.Price)</del><sup>đ</sup></div>
                            <div class="price mt-1 text-danger" style="font-size:16px">@string.Format("{0:0,0}", item.PriceDiscount)<sup>đ</sup></div><br />

                        </figure>
                    </div> <!-- col.// -->

                }

            </div>
        </div>
    </section>
    <!-- =============== SECTION DEAL // END =============== -->
    <!-- =============== SECTION 1 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h3 class="title-section text-uppercase">Apple</h3>
        </header>
        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">
                    <img src="~/Content/images/items/a.png" style="width:200px;height:180px;margin-left:80px" />
                    @*<div class="home-category-banner bg-light-orange">
            <h5 class="title">Best trending clothes only for summer</h5>
            <p>Consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
            <a href="#" class="btn btn-outline-primary rounded-pill">Source now</a>
            <img src="~/Content/images/items/2.jpg" class="img-bg">
        </div>*@
                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(n => n.BrandId == 1).Take(4))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="@Url.Action("Detail","Product",new { Id = item.Id })" class="item">
                                    <div class="card-body">
                                        <h6 style="font-weight: bold; font-size: 17px" class="title">@item.Name  </h6>
                                        <img class="img-sm float-right" src="~/Content/images/items/@item.Avatar">
                                        <div class="price mt-1 text-muted"><del style="font-size:13px">@string.Format("{0:0,0}", item.Price)</del><sup>đ</sup></div>
                                        <div class="price mt-1 text-danger" style="font-size:15px">@string.Format("{0:0,0}", item.PriceDiscount)<sup>đ</sup></div><br />
                                    </div>
                                </a>
                            </li>
                        }



                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 1 END =============== -->
    <!-- =============== SECTION 2 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h3 class="title-section text-uppercase">Samsung</h3>
        </header>
        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">
                    <img src="~/Content/images/items/ss.png" style="width:340px;height:180px" />
                </div> <!-- col.// -->

                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(n => n.BrandId == 2).Take(4))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="@Url.Action("Detail","Product",new { Id = item.Id })" class="item">
                                    <div class="card-body">
                                        <h6 style="font-weight: bold; font-size: 17px" class="title">@item.Name</h6>
                                        <img class="img-sm float-right" src="~/Content/images/items/@item.Avatar">
                                        <div class="price mt-1 text-muted"><del style="font-size:13px">@string.Format("{0:0,0}", item.Price)</del><sup>đ</sup></div>
                                        <div class="price mt-1 text-danger" style="font-size:15px">@string.Format("{0:0,0}", item.PriceDiscount)<sup>đ</sup></div><br />
                                        @*<p class="text-muted"><i class="fa fa-map-marker-alt"></i> Tokyo, Japan</p>*@
                                    </div>
                                </a>
                            </li>

                        }

                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 2 END =============== -->

   
    <!-- =============== SECTION ITEMS =============== -->
    <section class="padding-bottom-sm">
        <header class="section-heading heading-line">
            <h3 class="title-section text-uppercase">Sản phẩm đề xuất</h3>
        </header>
        <div class="row row-sm">
            @foreach (var item in Model.ListProduct.Where(n => n.TypeId == 2).Take(6))
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                    <div class="card card-sm card-product-grid">
                        <a href="@Url.Action("Detail","Product",new { Id = item.Id })" class="img-wrap"> <img src="~/Content/images/items/@item.Avatar"> </a>
                        <figcaption class="info-wrap">
                            <a href="@Url.Action("Detail","Product",new { Id = item.Id })" class="title" style="font-weight:bold;">@item.Name</a>
                            <div class="price mt-1 text-muted"><del style="font-size:13px">@string.Format("{0:0,0}", item.Price)</del><sup>đ</sup></div>
                            <div class="price mt-1 text-danger" style="font-size:15px">@string.Format("{0:0,0}", item.PriceDiscount)<sup>đ</sup></div><br />
                        </figcaption>
                    </div>
                </div> <!-- col.// -->

            }

        </div> <!-- row.// -->
    </section>
    <!-- =============== SECTION ITEMS .//END =============== -->
    
  

