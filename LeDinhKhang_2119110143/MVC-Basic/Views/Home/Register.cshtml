@model MVC_Basic.Context.User_2119110143

@{
    ViewBag.Title = "Đăng kí";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <h4 class="text-center text-uppercase text-primary" style="font-size:28px">Đăng ký</h4>
    <hr />
   
    <div class="form-horizontal my-2" style="margin-left:43%">
        <div class="col-md-9 text-dark" style="margin-left:30px;width:180px">
            @Html.Partial("Message")
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">

            &nbsp&nbspHọ
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            &nbsp&nbspTên
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            &nbsp&nbspEmail
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            &nbsp&nbspMật khẩu
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left:7%">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đăng kí" class="btn btn-primary" />
            </div>
        </div>

    </div>
    <hr />
    <div class="text-center btn  btn-sm btn-success text-white" style="margin-left:720px">
        @Html.ActionLink("Về trang chủ", "Index")
    </div>
    <br />
    <br />
}

